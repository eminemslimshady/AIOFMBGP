<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/listitem_selector"
    android:paddingTop="5dp"  >

    <ImageView
        android:id="@+id/image_icon1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_cast_connected_black_36dp"/>

    <TextView
        android:id="@+id/tv_deviceid1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_icon1"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_devicename1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_icon1"
        android:layout_alignLeft="@id/tv_deviceid1"
        android:textSize="12sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tv_devicetype1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_deviceid1"
        android:textSize="12sp"
        android:textColor="@color/black" />

</RelativeLayout>
